# 营销活动中心脚本 - 展示限时活动、促销等营销功能

# 活动查询
intent "活动查询" {
    when user_says "活动" or "有什么活动" or "活动信息" or "查看活动" or "活动查询" or "限时活动" {
        ask "请选择您想了解的活动类型"
        options ["限时", "节日", "会员", "新品", "全部"]
        wait_for activity_type
        set promotion = get_promotion_info(activity_type)
        response "{promotion}\n\n🎉 更多精彩活动：\n\n🔥 限时秒杀：每天10点、14点、20点开抢\n🎁 满减活动：满200减50，满500减150\n💰 优惠券：新用户注册即送50元优惠券\n⭐ 积分翻倍：会员购物积分翻倍\n🎊 抽奖活动：购物满100元即可参与抽奖\n\n您想了解哪个活动的详细信息？"
    }
}

# 限时活动
intent "限时活动" {
    when user_says "限时" or "限时活动" or "限时抢购" or "秒杀" or "限时优惠" {
        set promotion = get_promotion_info("限时")
        response "{promotion}\n\n⏰ 限时活动详情：\n\n🕐 活动时间：\n• 每日10:00-12:00 早市特惠\n• 每日14:00-16:00 午市特惠\n• 每日20:00-22:00 夜市特惠\n\n💰 活动力度：\n• 热门商品低至5折\n• 精选商品8折起\n• 限时秒杀商品3折起\n\n📦 活动规则：\n• 每个用户限购3件\n• 库存有限，先到先得\n• 不支持退换货\n\n您想查看当前限时活动商品吗？"
    }
}

# 节日活动
intent "节日活动" {
    when user_says "节日" or "节日活动" or "节日促销" or "节日优惠" or "节日特惠" {
        set promotion = get_promotion_info("节日")
        response "{promotion}\n\n🎊 节日活动详情：\n\n🎁 活动内容：\n• 全场商品9折起\n• 满200减50，满500减150\n• 会员再享9.5折\n• 积分翻倍奖励\n\n🎉 节日礼品：\n• 购物满500元送精美礼品\n• 购物满1000元送神秘大礼包\n• 前100名用户额外赠送优惠券\n\n⏰ 活动时间：节日期间（具体时间请查看活动页面）\n\n您想了解当前有哪些节日活动吗？"
    }
}

# 优惠券领取
intent "优惠券领取" {
    when user_says "优惠券" or "领券" or "领取优惠券" or "优惠券领取" or "有优惠券吗" {
        ask "请选择您想要的优惠券类型"
        options ["新用户", "生日", "节日", "会员专享", "随机"]
        wait_for coupon_type
        set coupon = get_coupon(coupon_type)
        response "恭喜您！{coupon}\n\n📋 优惠券使用规则：\n• 有效期：30天\n• 使用门槛：满100元可用\n• 适用范围：全场商品（特价商品除外）\n• 不可叠加使用\n\n💡 使用提示：\n• 结算时自动抵扣\n• 可在"我的优惠券"中查看\n• 过期前3天会提醒您\n\n您想查看其他优惠券吗？"
    }
}

# 满减活动
intent "满减活动" {
    when user_says "满减" or "满减活动" or "满多少减多少" or "满减优惠" {
        response "💰 满减活动详情：\n\n🎯 活动规则：\n• 满100元减10元\n• 满200元减50元\n• 满500元减150元\n• 满1000元减350元\n\n📦 活动范围：\n• 全场商品参与（特价商品除外）\n• 可与优惠券叠加使用\n• 会员享受额外满减\n\n⏰ 活动时间：长期有效\n\n💡 使用提示：\n• 自动计算满减金额\n• 结算时自动抵扣\n• 不设使用上限\n\n您当前购物车金额：¥1,299.00\n可享受满减优惠：¥150.00\n\n需要我帮您结算吗？"
    }
}

