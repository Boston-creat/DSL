# 礼品定制
intent "礼品定制" {
    when user_says "礼品" or "定制礼品" or "礼品包装" or "送礼物" or "礼品服务" {
        ask "请选择礼品类型"
        options ["生日礼品", "节日礼品", "商务礼品", "纪念礼品", "其他"]
        wait_for gift_type
        ask "请输入收礼人信息（姓名、关系等，用于个性化定制）"
        wait_for recipient_info
        response "🎁 礼品定制服务：\n\n礼品类型：{gift_type}\n收礼人：{recipient_info}\n\n✨ 定制选项：\n• 精美包装：+30元\n• 定制贺卡：+20元（可写祝福语）\n• 定制礼盒：+50元\n• 专属标签：+15元\n\n📝 服务说明：\n• 提供免费包装服务\n• 可添加个性化祝福语\n• 支持定时配送\n• 保密配送服务\n\n您想选择哪些定制选项？或者直接确认订单？"
    }
}

# 企业团购服务
intent "企业团购" {
    when user_says "团购" or "企业团购" or "批量采购" or "公司采购" or "团购优惠" {
        response "🏢 企业团购服务：\n\n💰 团购优惠：\n• 10-50件：9折优惠\n• 50-100件：8.5折优惠\n• 100件以上：8折优惠\n• 可定制专属价格\n\n📦 团购服务：\n• 批量配送服务\n• 统一发票开具\n• 分期付款支持\n• 专属客户经理\n\n🎯 适用场景：\n• 企业员工福利\n• 活动奖品采购\n• 商务礼品定制\n• 批量设备采购\n\n📞 服务流程：\n1. 提交团购需求\n2. 专属客户经理对接\n3. 定制方案和报价\n4. 确认订单和合同\n5. 批量生产和配送\n\n您想提交团购需求吗？或者了解团购详情？"
    }
}

# 预约服务
intent "预约服务" {
    when user_says "预约" or "预约服务" or "预约时间" or "预约上门" or "预约咨询" {
        ask "请选择预约服务类型"
        options ["上门服务", "到店服务", "电话咨询", "视频咨询"]
        wait_for service_type
        ask "请选择您方便的时间（比如：明天上午10点）"
        wait_for appointment_time
        response "✅ 预约成功！\n\n预约信息：\n服务类型：{service_type}\n预约时间：{appointment_time}\n预约编号：APT{hash(appointment_time) % 10000:04d}\n\n📋 预约说明：\n• 我们会在预约时间前1小时提醒您\n• 如需改期，请提前24小时联系客服\n• 上门服务请确保地址准确\n• 到店服务请携带相关证件\n\n您想查看预约详情或修改预约吗？"
    }
}

